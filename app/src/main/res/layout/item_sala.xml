<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_marginLeft="@dimen/margen_left_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margen_left_card"
    android:layout_marginBottom="@dimen/margen_left_card"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="2dp"
    android:elevation="3dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="F"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:id="@+id/txtFistLetter"
            android:gravity="center_vertical|center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorSecond"
                android:text="LaborÃ¡torio de redes"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Numero: 1"

                android:textSize="16sp" />
        </LinearLayout>

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:theme="@style/toobarItem"
            android:elevation="0dp"
            android:layout_gravity="right|center_vertical" />-->
    </LinearLayout>
</android.support.v7.widget.CardView>