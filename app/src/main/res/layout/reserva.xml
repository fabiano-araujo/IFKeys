<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/windowBackground"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
>
<android.support.design.widget.AppBarLayout
    android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tbDetalhes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Reserva"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
</android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/back"
                android:scaleType="centerCrop"
                android:layout_height="140dp">
            </ImageView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="3dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="16dp"
                android:background="@color/black"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp"
                android:elevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/bg_card"
                        android:orientation="vertical"
                        android:layout_height="100dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N° 10. Laboratório de resdes"
                            android:layout_marginLeft="24dp"
                            android:maxLines="2"
                            android:id="@+id/txtSala"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="34dp"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtReservado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reservado em: 10/01/2018 às 12:34"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="14dp"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/txtEntregue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Entregue em: 10/01/2018 às 2:45"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/txtPor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reservado por: 20141064010239"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="4dp"
                            android:textSize="15dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/bg_card"
                        android:layout_height="0.5dp">

                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:layout_width="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/bg_card"
                            android:layout_height="70dp">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="24dp"
                            android:id="@+id/txtEstado"
                            android:text="Indisponível"
                            android:textSize="20dp"
                            android:textColor="@color/bg_card"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="130dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="24dp"
                            android:text="Reservar"
                            android:id="@+id/btnReservar"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"
                            android:layout_height="50dp" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/bg_card"
                        android:layout_height="0.5dp">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Campus"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="14dp"
                            android:textSize="18dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IFRN JC"
                            android:id="@+id/txtCampus"
                            android:layout_marginLeft="24dp"
                            android:textColor="@color/bg_card"
                            android:layout_marginTop="3dp"
                            android:textSize="16dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/bg_card"
                        android:layout_height="0.5dp">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="100dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Número da sala"
                            android:layout_marginLeft="24dp"

                            android:layout_marginTop="24dp"
                            android:textSize="18dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Número: 10"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="3dp"
                            android:textSize="16dp"
                            android:id="@+id/txtNumero"
                            android:textColor="@color/bg_card"
                            />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>