<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="@dimen/card_genero"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardCornerRadius="2dp"
    android:layout_width="@dimen/width_card"
    android:layout_marginLeft="@dimen/margen_left_card"
    android:layout_marginTop="@dimen/margen_left_card"
    android:layout_marginBottom="@dimen/margen_left_card"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivCard"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            android:adjustViewBounds="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:id="@+id/llCor"
            android:layout_margin="6dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#4a5f8c"
                android:textSize="12dp"
                android:id="@+id/txtSubTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WubTitle teste legal"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:textSize="14dp"
                android:id="@+id/txtTitle"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>