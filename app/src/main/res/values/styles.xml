<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:keyTextColor">@color/textColor</item>
        <item name="android:textColorHintInverse">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TheToobar" parent="Theme.AppCompat">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    <style name="toobarItem" parent="Theme.AppCompat">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorControlNormal">@color/colorSecond</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
